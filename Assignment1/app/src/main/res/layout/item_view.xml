<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"
        android:layout_marginTop="18dp"
        android:textSize="20sp"
        android:text="Spinner"
        android:id="@+id/item_txtSpin"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"
        android:textSize="10sp"
        android:text="Date"
        android:id="@+id/item_txtDate"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="35sp"
        android:text="Amount"
        android:id="@+id/item_txtAmount"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/item_txtSpin"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"
        android:textSize="20sp"
        android:text="Categ"
        android:id="@+id/item_txtCateg"
        android:layout_alignTop="@+id/item_txtAmount"
        android:layout_alignParentEnd="true"
        android:textColor="@color/mycolor2"/>


</RelativeLayout>